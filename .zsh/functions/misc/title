function title {
    if [[ $TERM == screen* ]]; then
        # Use these two for GNU Screen:
        print -nR $'\ek'$1$'\e'"\\"
        shift
#       print -nR $'\e]0;'$*$'\a'
        print -nR $'\e_screen \005 | '$*$'\e'"\\"
    elif [[ $TERM == "xterm" || $TERM == rxvt* ]]; then
        # Use this one instead for XTerms:
        shift
        print -nR $'\e]0;'$@$'\a'
    fi      
}
